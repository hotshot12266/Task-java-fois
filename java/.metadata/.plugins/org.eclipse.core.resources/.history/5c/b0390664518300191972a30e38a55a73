		//		} catch (FileNotFoundException e) {
		//			System.out.println("スタックトレースも出力する");
		//			e.printStackTrace();
		//		}

		//2-3:
		//	try {
		//		String[] arrayb={"a","b","c"};
		//		System.out.println(arrayb[3]);
		//	} catch (ArrayIndexOutOfBoundsException e) {
		//		System.out.println("スタックトレースも出力する");
		//		e.printStackTrace();
